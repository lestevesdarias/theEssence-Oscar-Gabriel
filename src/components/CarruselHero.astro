  <style>
    swiper-container {
      width: 100%;
      height: 350px;
    }

    swiper-slide {
      font-size: 18px;
      display: grid;
      grid-template-columns: repeat(12,1fr);
      grid-template-rows: repeat(12,1fr);
    }

    swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .info {
        grid-column: 3/10;
        grid-row: 2/12;
         z-index: 1;
    }

    h2 {
        
        
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 30px;
        
        font-weight: bold;
        margin: 0;
        z-index: 1;
        text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.7);

        a {
          color: rgb(255, 255, 255);
          text-decoration: none;
        }
    }

    h2:hover {
                transform: scale(1.1);
                
            }

   

    .portada {
        grid-column: 1/13;
        grid-row: 1/13;
    }

    .sumario {
   
     


---

const destinos = [
    { nombre: "TOKYO", archivo: "tokyo.png", ruta: "/Tokyo" },
    { nombre: "SHIBUYA", archivo: "shibuya.png", ruta: "/Shibuya" },
    { nombre: "NARA", archivo: "nara.png", ruta: "/Nara" },
    { nombre: "OSAKA", archivo: "osaka.png", ruta: "/Osaka" },
    { nombre: "URAYASU", archivo: "urayasu.png", ruta: "/Urayasu" },
    { nombre: "HAKO", archivo: "hako.png", ruta: "/Hako" },
    { nombre: "AKIHABARA", archivo: "akihabara.png", ruta: "/Akihabara" },
    { nombre: "KANAZAWA", archivo: "kanazawa.png", ruta: "/Kanazawa" },
    { nombre: "ARASHIYAMA", archivo: "arashiyama.png", ruta: "/Arashiyama" },
];
---

<section class="destinosparte">
    <div class="titulo">
        <h2>DESTINOS</h2>
        <p>A donde ir durante tu visita.</p>
    </div>
    <div class="grid">
        {destinos.map((destino) => (
           
            <a href={destino.ruta} class="enlace-foto" aria-label={`Ver detalles de ${destino.nombre}`}>
                <div class="foto">
                    <img src={`/${destino.archivo}`} alt={`Vista de ${destino.nombre}`} />
                    <span class="lugar">{destino.nombre}</span>
                </div>
            </a>
        ))}
    </div>
</section>

<style>

    .enlace-foto {
        text-decoration: none;
        display: block; 
    }
    
    .destinosparte {
        margin-top: -160px;
        padding: 0 20px;
        margin-bottom: 15%;
    }

    .titulo h2 {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 35px;
        font-weight: 700;
        color: #000; 
        margin-bottom: -20px;
        letter-spacing: 1px;
        padding-left: 110px;
        padding-bottom: 0%;
    }

    .titulo p {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 20px;
        color: #CC0000;
        margin-bottom: 25px;
        padding-left: 110px;
        padding-top: 0%;
    }

   .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px; 
        max-width: 600px;
        margin: 0 auto;
    }


    .foto {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        cursor: pointer;
        height: 180px;
        background-color: #ccc;
        transition: box-shadow 0.3s ease-in-out;
    }


    .enlace-foto:hover .foto {
        box-shadow: 0 5px 15px rgba(204, 0, 0, 0.5);
    }

    .foto img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.3s ease-in-out;
    }


    .enlace-foto:hover .foto img {
        transform: scale(1.1);
    }

    .lugar {
        position: absolute;
        bottom: 10px;
        left: 10px;
        color: white;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        background-color: #CC0000;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        z-index: 10;
        text-shadow: 0 0 5px rgba(0, 0, 0, 0.8); 
    }
</style>
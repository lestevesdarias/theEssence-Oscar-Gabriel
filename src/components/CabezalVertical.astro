---
const botonesData = [
    { 
    text: "Aventura", 
    iconPath: "/Aventura.svg", 
    link: "/Aventura" },
        
    { 
    text: "Comida", 
    iconPath: "/Comida.svg", 
    link: "/Comida" 
    },

    { 
    text: "Shinrin-Yoku", 
    iconPath: "/shirinyoku.svg", 
    link: "/Shinrin-Yoku" 
    },

    { 
    text: "Tradici√≥n", 
    iconPath: "/Tradicion.svg", 
    link: "/Tradicion" 
    },
];
---

<div id="cabezal-vertical" class="cabezal-vertical-grid">

    <div class="botones">
        {botonesData.map((btn) => (
            <a href={btn.link} class="link" aria-label={btn.text}>
                
                <div class="iconodecorativo">
                    <img 
                        src={btn.iconPath} 
                        alt={`${btn.text}`} 
                        class="botonfondo"
                        
                    />
                </div>
                
            <span class="textodelboton">{btn.text}</span>

            </a>
        ))}

    </div>
    <div class="nav-content">
        <img 
            src="/temploazul.svg" 
            alt="" 
            class="templo" 
        />
    </div>

</div>


<style>
    .cabezal-vertical-grid {
        position: sticky; 
        top: 0;
        height: 100vh;
        width: 100%;
        padding: 0px 0px 10px 10px;
        box-sizing: border-box;
        z-index: 10;
    }

    .templo {
        position: absolute;
        top: 50%;
        width: 400%; 
        left: -120%; 
        transform: translateY(-50%);
        height: auto;
        opacity: 1; 
        z-index: 1; 
        pointer-events: none; 
    }

    .nav-content {
        position: relative;
        width: 100%;
        height: 100%; 
        background-color: #CC0000;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 0 10px 10px 0;
        padding: 20px 10px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow: hidden;
    }
    
    .botones {
        position: absolute; 
        display: flex; 
        flex-direction: column;
        gap: 35px;      
        top: 110px;      
        right: -100px;   
        z-index: 20; 
        width: 170px; 
    }

    .link {
        position: relative; 
        display: flex;
        align-items: center;
        justify-content: center; 
        background-color: white;
        box-shadow: 0 25px 45px rgba(0, 0, 0, 0.2);
        padding: 15px 10px; 
        border-radius: 5px;
        text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.3s;
        border-left: 5px solid #000000; 
        overflow: visible; 
        z-index: 20; 
    }

    .link:hover {
        transform: translateX(3px); 
        box-shadow: 0 25px 45px rgba(0, 0, 0, 0.9); 
        z-index: 21; 
        background-color: transparent; 
    }
    
    .iconodecorativo {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; 
        z-index: 1; 
         opacity: 0;
        transition: opacity 0.3s; 
    }

    .link:hover .iconodecorativo {
        opacity: 1; 
    }

    .botonfondo {
        position: absolute;
        bottom: -20px; 
        right: -20px; 
        width: 140%; 
        height: auto;
    }

    .textodelboton {
        color: #000; 
        font-family: Georgia, 'Times New Roman', Times, serif;
        font-size: 17px; 
        white-space: nowrap; 
        z-index: 30; 
        position: relative; 
        padding-left: 5px; 
        opacity: 1; 
        transition: opacity 0.3s, transform 0.3s; 
    }

    .link:hover .textodelboton {
        opacity: 0; 
        transform: translateX(-5px); 
    }
</style>
---
// RoomCard.astro
const { titulo, imagen, precio, calificación, cama, baño, tamaño, tipo } = Astro.props;
---
<article class="room-card">
  <img src={imagen} alt={titulo} class="room-image" />
  <div class="room-info">
    <h3 class="room-title">{titulo}</h3>
    <p class="room-price">{precio} /noche</p>
    <p class="room-rating">Calificación: {calificación} <span class="star-rating">⭐</span></p>
    <div class="room-details">
      <p>{cama} Camas</p>
      <p>{baño} Baños</p>
      <p>{tamaño} Metros cuadrados</p>
    </div>
    <button class="room-button">Reservar Ahora</button>
  </div>
</article>
<style>

.room-card {
  border: 1px solid #ddd;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  
}

.room-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.room-info {
  padding: 15px;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
        color: #000000;
        padding-top: 20px;
}

.room-title {
  font-size: 1.2rem;
  font-weight: bold;
  margin-bottom: 10px; 
  font-family: Verdana, Geneva, Tahoma, sans-serif;
        color: #000000;
        padding-top: 20px;
}

.room-price {
  font-size: 1.1rem;
  color: #be1919;
  margin-bottom: 10px;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
      
        padding-top: 20px;
}

.room-rating {
  margin-bottom: 10px; font-family: Verdana, Geneva, Tahoma, sans-serif;
        color: #000000;
        padding-top: 20px;
}

.star-rating {
  color: #ffcc00;
}

.room-details p {
  font-size: 0.9rem;
  color: #666;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
        padding-top: 20px;
}

.room-button {
  background-color: #f5f5f5;
  color: white;
  padding: 10px;
  text-align: center;
  width: 100%;
  border: none;
  border-radius: 5px;
  cursor: pointer;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
    
      
}

.room-button:hover {
  background-color: #cacaca;
}

</style>
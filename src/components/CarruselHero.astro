---


const traerArticulos = await fetch('https://public-api.wordpress.com/wp/v2/sites/gabrielvarela2000g-mhgnj.wordpress.com/posts?categories=609441&per_page=100');
const json = await traerArticulos.json();
---

<swiper-container class="mySwiper" pagination="true" loop="true" autoplay='{"delay": 4000}' effect="fade" 
crossfade="true"> 
   {json.map((articulo:any) => (
       <swiper-slide>
        <div class="info">
          <h2 >
            <a href={articulo?.slug} set:html={articulo?.title?.rendered}></a>
          </h2>

              <div class="sumario" set:html={articulo?.excerpt?.rendered}>
                
              </div>
        </div>
            

            <div class="portada">
                <img src={articulo?.jetpack_featured_media_url} alt=""/>
            </div>
        </swiper-slide>
   ))}


---
// Article.astro
const { title, image, description, author, date } = Astro.props;
---
<article class="article">
  <img src={image} alt={title} class="article-image" />
  <div class="article-content">
    <h3>{title}</h3>
    <p class="author">{author}</p>
    <p>{description}</p>
    <div class="date"> <p >{date}</p></div>
  </div>
  
</article>
<style>

.article {
 
   display: grid;
  grid-template-columns: repeat(4,1fr);
  gap: 20px;
   border: 1px solid #ddd;
  padding: 20px;
  background: #fff;
}

.article-image {
  display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    overflow: hidden;
}

.article-content {
  padding-top: 10px;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 30px;

        h3, p {
          margin: 0;
        }
}

.author {
  color: #777;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 30px;
}
.date{
    color: #777;
   font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 30px;
}